  <script>

    $(document).ready(function() {

      $('#calendar').fullCalendar({
        header: {
          left: 'prev,next today',
          center: 'title',
          right: 'month,agendaWeek,agendaDay'
        },
        defaultDate: '<%= Date.today.strftime("%F") %>',
        selectable: true,
        selectHelper: true,
        eventClick: function(calEvent, jsEvent, view) {

          if (confirm("Delete Event?"))
          {
            $.ajax({
              type: 'POST',
              url: window.location.pathname + '/appointment/' + calEvent.id,
              datatype: "json",
              data: {"_method":"delete"},
              error: function() {
                alert('error deleting');
              },
              complete: function() {
                location.reload();
              }
            });
          }
        },
        select: function(start, end) {
          var title = prompt('Name and phone extension:');
          var eventData;
          var event_id;
          $.ajax({
              type: 'GET',
              datatype: 'json',
              url: window.location.pathname + '/appointment/next_id',
              success: function(data) {
                event_id = data.next_id;
              },
              error: function() {
                alert('error getting id');
                event_id = -1;
              }
          });
          if (title) {
            eventData = {
              id: event_id,
              title: title,
              start: start,
              end: end
            };
            //save event in rails
            $.ajax({
                type: "POST",
                cache: false,
                url: window.location.pathname + '/appointment',
                data: {
                  title: eventData.title,
                  start: eventData.start.toString(),
                  end:   eventData.end.toString()
                },
              error: function() {
                alert('error');
              }
             });
            $('#calendar').fullCalendar('renderEvent', eventData, true);
          }
          $('#calendar').fullCalendar('unselect');
        },
        editable: true,
          events: [<% @events.each do |e| %>
            {
              id:    '<%= e[:id] %>',
              title: '<%= e[:title] %>',
              start: '<%= e[:start] %>',
              end: '<%= e[:stop] %>'
            }<%= ',' if e != @events.last %>
           <% end %>]
